<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"
    android:background="@color/transparent"
    tools:context="com.example.chao.mediahub.PlaylistBotInfoFragment"
    android:onClick="showController"
    android:visibility="visible">
    <TextView
        android:id="@+id/mediaplayer_controller_label_title"
        android:text="@string/unknown_music"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/mediaplayer_controller_label_artist"/>
    <TextView
        android:id="@id/mediaplayer_controller_label_artist"
        android:text="@string/unknown_artist"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/mediaplayer_controller_label_current_time"
        android:layout_toRightOf="@id/mediaplayer_controller_label_current_time"
        android:layout_toStartOf="@+id/mediaplayer_controller_label_total_time"
        android:layout_toLeftOf="@id/mediaplayer_controller_label_total_time"
        android:layout_above="@+id/mediaplayer_controller_seek_bar"/>
    <TextView
        android:id="@id/mediaplayer_controller_label_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mediaplayer_controller_seek_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="0:00"
        android:textStyle="bold"
        android:textColor="@color/lime_green"/>
    <TextView
        android:id="@id/mediaplayer_controller_label_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/mediaplayer_controller_seek_bar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="end"
        android:text="0:00"
        android:textStyle="bold"
        android:textColor="@color/lime_green"/>
    <SeekBar
        android:id="@id/mediaplayer_controller_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:progressBackgroundTint="@color/black"
        android:thumb="@color/transparent"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:progress="0"/>
</RelativeLayout>