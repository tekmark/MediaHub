<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    tools:context=".PlaylistMgmtFragment">
    <TextView
        android:id="@+id/playlist_mgmt_playlist_name"
        android:text="playlist name"
        android:textSize="32dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playlist_mgmt_playlist_name"
        android:orientation="vertical">
        <Button android:id="@+id/playlist_mgmt_button_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modify"/>
        <Button android:id="@+id/playlist_mgmt_button_sticky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sticky"/>
        <Button android:id="@+id/playlist_mgmt_button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete"/>
        <Button android:id="@+id/button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />
    </LinearLayout>
</RelativeLayout>
