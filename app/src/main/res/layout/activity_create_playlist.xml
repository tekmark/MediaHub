<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chao.mediahub.CreatePlaylistActivity">
    <Button
        android:id="@+id/create_playlist_button_cancel"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>
    <Button
        android:id="@+id/create_playlist_button_done"
        android:text="@string/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/create_playlist_label_name"
        android:text="Title"
        android:layout_below="@id/create_playlist_button_done"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/create_playlist_edittext_name"
        android:layout_width="match_parent"
        android:layout_below="@id/create_playlist_label_name"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:singleLine="true" />
    <Button
        android:id="@+id/create_playlist_button_add"
        android:layout_below="@id/create_playlist_edittext_name"
        android:text="Add songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/create_playlist_added_songs"
        android:layout_below="@id/create_playlist_button_add"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
