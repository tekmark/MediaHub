<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_file_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/music_file_info_title"
        android:text="@string/unknown_music"
        android:singleLine="true"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/music_file_info_duration"
        android:layout_toStartOf="@id/music_file_info_duration"/>
    <TextView
        android:id="@+id/music_file_info_artist_album"
        android:text="@string/unknown_artist"
        android:textSize="12sp"
        android:singleLine="true"
        android:layout_below="@id/music_file_info_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/music_file_info_duration"
        android:layout_toStartOf="@id/music_file_info_duration"/>
    <TextView
        android:id="@id/music_file_info_duration"
        android:text="0:00"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/music_file_info_artist_album"
        android:layout_alignParentTop="true" />
</RelativeLayout>