<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/media_control_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black">
        <LinearLayout
            android:id="@+id/media_control_progress_time"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/mediaplayer_controller_label_current_time"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="0:00"
                android:textStyle="bold"
                android:textColor="@color/lime_green"/>
            <TextView
                android:id="@+id/mediaplayer_controller_label_total_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1"
                android:text="0:00"
                android:textStyle="bold"
                android:textColor="@color/lime_green"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/mediaplayer_controller_seek_bar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:progressBackgroundTint="@color/light_gray_header_color"
            android:max="100"
            android:progress="15"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/mediaplayer_controller_button_skip_to_start"
        android:src="@drawable/skip_to_start_filled_32"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <ImageButton
        android:id="@+id/mediaplayer_controller_button_play_pause"
        android:src="@drawable/play_pause"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"/>
    <ImageButton
        android:id="@+id/mediaplayer_controller_button_end"
        android:src="@drawable/end_filled_32"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ImageButton
        android:id="@+id/mediaplayer_controller_button_shuffle"
        android:src="@drawable/shuffle"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <ImageButton
        android:id="@+id/media_control_repeat"
        android:src="@drawable/repeat"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/mediaplayer_controller_label_title"
        android:background="@color/black"
        android:text="All by myself"
        android:gravity="center_vertical"
        android:textColor="@color/lime_green"
        android:textSize="24sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:layout_width="200dp"
        android:layout_height="match_parent" />
    <ImageButton
        android:id="@+id/meidaplayer_button_choose_playlist"
        android:src="@drawable/list_filled_32"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</LinearLayout>