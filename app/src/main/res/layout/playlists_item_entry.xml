<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/playlist_name"
        android:singleLine="true"
        android:textSize="32dp"
        android:text="Playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/playlist_number_of_songs"
        android:layout_toLeftOf="@id/playlist_number_of_songs"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/playlist_more_options"/>
    <TextView
        android:id="@id/playlist_number_of_songs"
        android:text="1 song"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/playlist_more_options"
        android:layout_toStartOf="@id/playlist_more_options"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/playlist_more_options"/>
    <ImageButton
        android:id="@id/playlist_more_options"
        android:src="@drawable/more_32"
        android:contentDescription="@string/playlist_management_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>