<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <Button
        android:id="@+id/top_bar_button_cancel"
        android:text="@string/cancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>
    <Button
        android:id="@+id/top_bar_button_done"
        android:text="@string/done"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/top_bar_title"
        android:text="title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/top_bar_button_cancel"
        android:layout_toEndOf="@+id/top_bar_button_cancel"
        android:layout_toLeftOf="@id/top_bar_button_done"
        android:layout_toStartOf="@id/top_bar_button_done"
        android:layout_alignTop="@id/top_bar_button_cancel"
        android:layout_alignBottom="@id/top_bar_button_cancel"
        android:gravity="center_horizontal"/>
</RelativeLayout>